fname = input('Please enter file name: ')
try:
    fhand = open(fname)
except:
    print('File cannot be found!')
    exit()

count = dict()
for line in fhand:
    if line.startswith('From'):
        line = line.rstrip()
        words = line.split()
        if len(words) > 2:
            d = words[1].split('@')
            domain = d[1]
            count[domain] = count.get(domain,0) + 1
print(count)
lst = list(count.values())
lst.sort()
lst.reverse()
for i in lst:
    for key in count:
        if count[key] == i:
            print(key, i)
