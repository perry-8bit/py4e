fname = input('Pleas enter file name: ')
try:
    fhand = open(fname)
except:
    print('Fille cannot be found!')
    exit()
    
day = dict()
for line in fhand:
    if line.startswith('From'):
        line = line.rstrip()
        words = line.split()
        if len(words) > 2:
            d = words[2]
            day[d] = day.get(d,0) + 1

print(day)
