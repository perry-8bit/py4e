import re

fhand = open('mbox-short.txt')
regname = input('Please enter regular expression: ')
count = 0
for line in fhand:
    line = line.rstrip()
    x = re.findall(regname, line)
    if len(x) > 0:
        count += 1
        
print('mbox-short.txt had {0} lines that mathched {1}.'.format(count, regname))
